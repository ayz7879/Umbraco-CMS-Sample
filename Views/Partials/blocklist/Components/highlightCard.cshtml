@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockListItem>
@using Umbraco.Cms.Core.Models.Blocks

@{
    var content = (BlockListItem)Model;
    var heading = content.Content.Value<string>("cardTitle");
    var description = content.Content.Value<string>("cardText");
    var image = content.Content.Value<IPublishedContent>("cardImage");
}

<!-- Link to external stylesheet -->
<link rel="stylesheet" href="~/css/card-styles.css">

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100 shadow-sm border-0 highlight-card">
        @if (image != null)
        {
            <div class="card-img-wrapper overflow-hidden">
                <img src="@image.Url()" class="card-img-top card-image" alt="@heading">
            </div>
        }
        
        <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold mb-3">@heading</h5>
            <p class="card-text text-muted flex-grow-1">@description</p>
            
            
        </div>
    </div>
</div>